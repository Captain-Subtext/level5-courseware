{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true, // Required for project references
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true // Keep strict for config files too
  },
  "include": ["vite.config.ts"] // Only include config files
}